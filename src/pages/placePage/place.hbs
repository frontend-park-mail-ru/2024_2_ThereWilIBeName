{{#each reviews}}
    <li>
        <div class="review-block">
            <div class="review-info">
                <div class="user-image">
                    <img src="{{avatar_path}}" alt="{{name}}">
                </div>
                <div class="text-average">{{user_login}}</div>
                <div class="rating" style="--progress: {{rating}};">{{rating}}/5</div>
            </div>
            <div><hr class="solid"></div>
            <div class="review-text">{{review_text}}</div>
        </div>
    </li>
{{/each}}
