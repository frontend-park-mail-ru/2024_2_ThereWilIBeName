.csat
  display block
  position fixed
  width 400px
  height 200px
  right 20px
  bottom 20px
  border-radius 20px
  opacity 1
  background-color myWhite
  transition opacity 0.3s ease

  .csat-close-button
    position absolute
    right 10px
    top 10px
    width 25px
    padding 0
    opacity 0.5
    transition opacity 0.3s ease

    &:hover
      opacity 1

  &.hidden
    display none

  &.hidden-animation
    opacity 0

  .home-question
    position absolute
    inset 0
    padding 20px

    .csat-question-title
      font-weight bold
      font-size 20px
