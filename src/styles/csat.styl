.csat
  display block
  position fixed
  width 400px
  height 200px
  right 20px
  bottom 20px
  border-radius 20px
  opacity 1
  background-color myWhite
  transition opacity 0.3s ease
  z-index 998

  .csat-close-button
    position absolute
    right 10px
    top 10px
    width 25px
    padding 0
    opacity 0.5
    transition opacity 0.3s ease
    z-index 999

    &:hover
      opacity 1

  &.hidden
    display none

  &.hidden-animation
    opacity 0

  .home-question
    display grid
    grid-template-columns auto
    grid-template-rows 15% auto 20%
    row-gap 10px
    position absolute
    inset 0
    padding 20px

    .csat-question-title
      font-weight bold
      font-size 20px

    .csat-question-input
      border-radius 20px

    .csat-question-button
      mixinBorder()
      padding 0 30px
      background-color myBlack
      color myWhite
      border 2px solid myNone
      border-radius 15px
      cursor pointer
      font-size 20px
      text-align center
      width fit-content
      transition background-color 0.3s ease, border 0.3 ease

      &:hover
        background-color myPink
        transform scale(1)

      &:focus
        border 2px solid myGrey
