.csat-page

  .csat-root
    position absolute
    width 400px
    height 200px
    background myWhite

  .home-question
    display grid
    grid-template-columns auto
    grid-template-rows 15% auto 20%
    row-gap 10px
    position absolute
    inset 0
    padding 20px

    star-container
      display flex
      flex-direction row

      star
        position relative

        img
          position absolute
          width 100%
          height 100%
          opacity 0.5
          z-index 998

        .star-input
          position absolute
          width 100%
          height 100%
          opacity 1
          z-index 999

      input + img
        cursor pointer

      input:checked + img ~ img
        opacity 1

      img:active
        transform scale(0.8)
        transition 0.3s ease


    .csat-question-title
      font-weight bold
      font-size 20px

    .csat-question-input
      padding 10px
      border-radius 20px
      border 1px solid myGrey
      transition border 0.3s ease

      &:focus
        border 2px solid myPink

    .csat-question-button
      padding 0 30px
      background-color myBlack
      color myWhite
      border none
      border-radius 15px
      cursor pointer
      font-size 20px
      text-align center
      width fit-content
      transition background-color 0.3s ease

      &:hover
        background-color myPink

.csat
  display block
  position fixed
  width 400px
  height 200px
  right 20px
  bottom 20px
  border-radius 20px
  opacity 1
  overflow hidden
  background-color myWhite
  transition opacity 0.3s ease
  z-index 997

  &.hidden
    display none

  &.hidden-animation
    opacity 0

  iframe
    display block
    position absolute
    border none
    width 100%
    height 100%
    z-index 998

  .csat-close-button
    position absolute
    right 10px
    top 10px
    width 25px
    padding 0
    opacity 0.5
    transition opacity 0.3s ease
    z-index 999

    &:hover
      opacity 1

