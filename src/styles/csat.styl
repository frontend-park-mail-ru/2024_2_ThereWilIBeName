.csat-page

  .csat-root
    position absolute


  .csat-close-button
    position absolute
    right 10px
    top 10px
    width 25px
    padding 0
    opacity 0.5
    transition opacity 0.3s ease
    z-index 999

    &:hover
      opacity 1

  &.hidden
    display none

  &.hidden-animation
    opacity 0

  .home-question
    display grid
    grid-template-columns auto
    grid-template-rows 15% auto 20%
    row-gap 10px
    position absolute
    inset 0
    padding 20px

    .csat-question-title
      font-weight bold
      font-size 20px

    .csat-question-input
      padding 10px
      border-radius 20px
      border 2px solid myNone
      transition border 0.3s ease

      &:focus
        border 2px solid myPink

    .csat-question-button
      padding 0 30px
      background-color myBlack
      color myWhite
      border none
      border-radius 15px
      cursor pointer
      font-size 20px
      text-align center
      width fit-content
      transition background-color 0.3s ease

      &:hover
        background-color myPink


.csat
  display block
  position fixed
  width 400px
  height 200px
  right 20px
  bottom 20px
  border-radius 20px
  opacity 1
  overflow hidden
  background-color myWhite
  transition opacity 0.3s ease
  z-index 997

  iframe
    display block
    position absolute
    border none
    width 100%
    height 100%
    z-index 998