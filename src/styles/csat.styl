.csat
  display block
  position fixed
  width 400px
  height 200px
  right 20px
  bottom 20px
  border-radius 20px
  opacity 1
  background-color myWhite
  transition opacity 0.3s ease

  .csat-close-button
    position absolute
    right 0
    top 0
    width 25px
    padding 0

  &.hidden
    display none

  &.hidden-animation
    opacity 0