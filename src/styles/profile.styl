.profile-page
  .background-profile
    position relative
    overflow hidden
    min-height 100vh

  .background-profile::before
    content ''
    position absolute
    top 150px
    left 0
    width 100%
    height 100%
    background-color myBlack
    z-index -1

  .user-block
    simpleBlock(myWhite)
    grid-template-columns auto 1fr auto

  .profile-block
    simpleBlock(myWhite)
    margin auto auto

  .avatar
    width 350px
    height 350px
    border-radius 20px
    object-fit cover
    background-color myBlack

  .information-block
    background-color myBlack
    heigth fit-content
    border-radius 20px
    display grid
    grid-template-rows auto auto auto

  .information-user-row
    simpleRow()
    grid-template-columns 40% auto auto

  .profile-menu-row
    simpleRow()
    height fit-content
    grid-template-columns 30% 40% 30%
    column-gap 20px

  .profile-menu-passive-left
    font-size 27px
    color myShadow
    text-align right
    cursor pointer

  .profile-menu-passive-right
    font-size 27px
    color myShadow
    text-align left
    cursor pointer

  .profile-menu-active
    font-size 40px
    color myBlack
    font-weight bold
    text-align center

  .information-text
    simpleInformationText(myWhite)

  .information-text-bold
    simpleInformationText(myWhite)
    font-weight bold
    font-size 27px

  .information-text-title
    simpleInformationText(myWhite)
    font-weight bold
    font-size 27px
    padding-left 10px
    text-align center

  .information-back-button
    font-size 30px
    font-weight bold
    color myGrey
    text-align right
    cursor pointer

  .user-information
    display grid
    grid-template-rows auto 1fr
    row-gap 20px

  .edit-button
    width 45px
    height 45px
    border-radius 10px
    background myWhite
    cursor pointer

  .edit-icon
    object-fit contain
    width 100%
    height 100%

  hr
    border none
    height 2px
    background-color myShadow
    margin 20px 30px

  .trips-gallery
    display flex
    flex-wrap wrap
    justify-content space-evenly
    gap 50px 30px
    padding 0px 150px