.profile-page
  .background-profile
    position relative
    overflow hidden
    min-height 100vh

    &::before
      content ''
      position absolute
      top 150px
      left 0
      width 100%
      height 100%
      background-color myBlack
      z-index -1

  .user-block
    mixinBlock(myWhite)
    display flex
    flex-direction row
    margin-top 0

  .profile-block
    mixinBlock(myWhite)
    margin auto auto

  .avatar
    min-height 100px
    max-height 300px
    aspect-ratio 1 / 1
    border-radius 20px
    object-fit cover
    background-color myBlack

  .information-block
    background-color myBlack
    heigth fit-content
    border-radius 20px
    display flex
    flex-direction column

  .information-user-row
    mixinRow()
    grid-template-columns 40% auto 10%

  .profile-menu-row
    mixinRow()
    height fit-content
    grid-template-columns 30% 40% 30%

  .profile-menu-passive-left
  .profile-menu-passive-right
    font-size 27px
    color myShadow
    cursor pointer
    transition transform 0.3s ease

  .profile-menu-passive-left
    text-align right

    &:hover
      transform scale(1.1)
      color myRed

  .profile-menu-passive-right
    text-align left

    &:hover
      transform scale(1.05)
      color myRed

  .profile-menu-active
    font-size 40px
    color myBlack
    font-weight bold
    text-align center
    transition transform 0.3s ease
    cursor pointer

    &:hover
      transform scale(1.05)

  .information-text
    mixinInformationText(myWhite)

  .information-text-bold
    mixinInformationText(myWhite)
    font-weight bold
    font-size 27px

  .information-text-title
    mixinInformationText(myWhite)
    font-weight bold
    font-size 27px
    padding-left 10px
    text-align center

  .information-back-button
    font-size 30px
    font-weight bold
    color myGrey
    height fit-content
    text-align right
    cursor pointer
    transition transform 0.3s ease

    &:hover
      color myRed

  .user-information
    display grid
    grid-template-rows auto 1fr
    row-gap 20px

  .edit-button
    width 45px
    height 45px
    border-radius 10px
    background myWhite
    cursor pointer
    transition transform 0.3s ease

    &:hover
      background linearGradient()
      transform scale(1.1)

  .edit-icon
    object-fit contain
    width 100%
    height 100%

  hr
    border none
    height 2px
    background-color myShadow
    margin 20px 30px

  .gallery-profile
    display flex
    flex-wrap wrap
    justify-content space-evenly
    gap 50px 30px

  .gallery-item-profile-trips
    mixinGalleryItem(250px, 250px, myWhite)
    grid-template-rows 20% 10% auto
    cursor pointer
    transition transform 0.3s ease

    &:hover
      transform scale(1.05)

  .gallery-item-profile-trips-img
    object-fit cover
    width 100%
    height 100%
    border 2px solid myBlack
    border-radius 20px

  .trip-icon
    width 40px
    height 40px

  .profile-trip-row-name
    color myBlack
    display grid
    grid-template-columns auto 1fr
    column-gap 20px
    align-items center

  .gallery-profile-trip-name
    color myBlack
    font-size 20px
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

  .gallery-profile-trip-date
    color myBlack
    text-align center

  .gallery-item-achievements
    mixinGalleryItem(250px, 200px, myBlack)
    grid-template-rows auto auto auto
    grid-template-columns 100%
    row-gap 0
    place-items center

  .gallery-item-achievements-img
    object-fit cover
    width 90px
    height 90px
    border-radius 20px

  .gallery-item-achievements-name
    width 150px
    font-size 20px
    color myWhite
    text-align center
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

  .gallery-item-achievements-progressbar
    font-size 20px
    color myWhite
    padding 10px 40px
    background linearGradient()
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    border-radius 10px

  .gallery-item-reviews
    mixinGalleryItem(150px, 800px, myWhite)
    grid-template-columns auto 20% 1fr
    column-gap 20px

  .gallery-item-reviews-img
    object-fit cover
    width 120px
    height 120px
    border-radius 20px
    border 2px solid myBlack

  .gallery-item-reviews-column
    display grid
    grid-template-rows 20% 25% 25% 1fr
    align-items center

  .gallery-item-reviews-name
    font-size 24px
    font-weight bold
    color myBlack
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

  .gallery-item-reviews-score
    font-size 20px
    color myBlack
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

  .gallery-item-reviews-text
    font-size 20px
    color myBlack
    overflow hidden
    height 110px
    mask-image linear-gradient(180deg, rgba(0, 0, 0, 1) 50%, rgba(0, 0, 0, 0))
