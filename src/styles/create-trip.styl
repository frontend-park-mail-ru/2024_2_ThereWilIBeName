.create-trip-page
  .create-trip-block
    mixinFormBlock()

  .create-trip-title
    mixinTitleGradient()

  .create-trip-text, .back-button
    mixinFormText()

  .back-button
    width fit-content
    cursor pointer
    font-weight bold
    font-size 20px

    &:hover
      color myRed

  .create-trip-button
    mixinFormButton()

  .border
    all unset
    display block
    width 90%
    height 30px
    padding 10px
    border-radius 15px
    margin 10px auto
    background linearGradient() 50% 50% / 100vw 100vh

    &.description
      height 60px

    &:focus
      background-position 0

  textarea.border.description
    height 100px

    &:focus
      background-position 0

  .create-trip-text.checkbox-button
    cursor pointer
