@font-face
    font-style normal
    font-weight bold
    font-family 'IBM Plex Mono'
    src local('IBM Plex Mono Bold'), url('../static/IBMPlexMono-Bold.ttf') format('truetype')

@font-face
    font-style normal
    font-weight normal
    font-family 'IBM Plex Mono'
    src local('IBM Plex Mono Regular'), url('../static/IBMPlexMono-Regular.ttf') format('truetype')

*
    box-sizing border-box

body
    margin 0
    padding 0
    height 100%
    background-size cover
    background linearGradient() fixed
    font-family "IBM Plex Mono", sans-serif

#root
    transition opacity 0.2s ease
    &.hidden
        opacity 0


.border
    all unset
    display block
    width 90%
    height 30px
    padding 10px
    border-radius 15px
    margin 10px auto
    background linearGradient() 50% 50% / 100vw 100vh

    &:focus
        background-position 0
