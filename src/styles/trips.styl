.trips-page
  mixinSideMenu()

  .trips-block
    mixinBlock(myBlack)
    display flex
    flex-direction column
    margin-top 15px

    @media (max-width 700px)
      margin 0 20px

  .trips-button-row
    display flex
    flex-wrap wrap
    justify-content space-evenly
    padding 0 20px

  .trip-create-button
    mixinButton(myGrey, myLightGrey)
    border-radius 20%
    font-size 30px
    display flex
    justify-content center
    align-items center
    transition transform 0.3s ease, background 0.3s ease, color 0.3s ease

    &:hover
      transform scale(1.05)
      background myPink
      color myWhite

    &.hidden
      display none

  .trips-title-row
    display grid
    grid-template-columns auto 1fr
    align-items center

  .trips-title
    font-size 40px
    padding-right 60px
    color myWhite
    text-align center

  hr
    border none
    height 2px
    background-color myGrey
    margin 20px 30px

  .gallery-trips
    display flex
    flex-wrap wrap
    justify-content space-evenly
    padding 0
    gap 15px 0

  .trips-back-button
    mixinBackButton()

  .gallery-item-trips
    display grid
    padding 25px
    border-radius 20px
    background myWhite
    height 130px
    width 70%
    grid-template-rows 80px auto
    row-gap 20px
    transition height 0.3s ease

    @media (max-width 700px)
      width 100%

    &.open
      height 300px

    .gallery-item-trips-top-panel
      display grid
      gap 10px
      align-items center
      grid-template-columns 10% 10% 50% 20% 5%
      grid-template-rows 1fr 1fr
      grid-template-areas "a b c e f"\
      "a b d e g"

      @media (max-width 700px)
        grid-template-columns 15% 70% 15%
        grid-template-areas "a c f"\
        "a d g"


    .gallery-item-trips-bottom-panel
      display flex
      width 100%
      height 100%
      overflow-y hidden
      overflow-x scroll
      scrollbar-width none
      flex-direction row
      column-gap 20px
      opacity 1
      padding-left 10px
      transition opacity 0.3s ease

      &.hidden
        display none

      &.open-animation
        opacity 0

      .trip-photos
        display flex
        flex-direction row
        column-gap 20px

      .add-photo-button
        color myWhite
        background myBlack
        align-content center
        text-align center
        border-radius 20px
        min-width 150px
        min-height 150px
        cursor pointer
        transition background 0.3s ease

        &:hover
          background myPinkShadow

        @media (max-width 700px)
          min-width 100px

      .delete-added-photo-block
        position relative
        min-width 150px
        width 150px
        min-height 150px
        height 150px

        .photo-delete-button
          color myWhite
          display block
          position absolute
          border-radius 0 0 20px 20px
          bottom 0
          width 100%
          background myRed
          text-align center
          align-content center
          object-fit cover
          height 40px
          opacity 0
          cursor pointer
          transition opacity 0.5s ease

          &:hover
            opacity 1

        .added-photo
          position absolute
          color myWhite
          background myPinkShadow
          align-content center
          text-align center
          border-radius 20px
          width 100%
          height 100%
          object-fit cover


    .trips-open-icon-grid
      grid-area a
    .trips-trip-icon-grid
      grid-area b
    .gallery-trips-name-grid
      grid-area c
    .gallery-trips-date-grid
      grid-area d
    .gallery-item-trips-img-grid
      grid-area e
    .trips-edit-icon-grid
      grid-area f
    .trips-delete-icon-grid
      grid-area g

  .trips-trip-icon
    width 65px
    height 65px

    @media (max-width 700px)
      display none

  .gallery-item-trips-img
    object-fit contain
    height 100%
    width 100%
    background myBlack
    border-radius 20px

    @media (max-width 700px)
      display none

  .trips-open-icon
    width 35px
    height 35px
    margin auto
    rotate -90deg
    cursor pointer
    transition transform 0.3s ease

    &.open
      transform rotate(90deg)

  .trips-edit-icon, .trips-delete-icon
    width 30px
    height 30px
    cursor pointer

  .trips-column-open
    display grid
    align-items center
    grid-template-rows 70px 1fr

  .trips-column-info
    display grid
    grid-template-rows auto auto 1fr

  .trips-column-buttons
    display grid
    grid-template-rows auto auto 1fr
    row-gap 10px

  .gallery-trips-name
    font-size 20px
    font-weight bold
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

  .gallery-trips-date
    font-size 17px

  .please-block
    align-items center
    display flex
    flex-direction column

    &.hidden
      display none

  .please-img
    height 200px
    width 200px

  .auth-please
    font-size 24px
    color myWhite
    margin auto
    text-align center
    width fit-content
