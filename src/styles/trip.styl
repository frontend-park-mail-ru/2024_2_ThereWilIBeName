.trip-page
  mixinSideMenu()

  main
    mixinBlock(myWhite)
    display grid
    grid-template-columns 10% 1fr 1fr 1fr 1fr 4% 4%
    grid-template-rows 70px 70px auto auto
    grid-template-areas "a b b b b . d"\
    "c c c c e e e"\
    "g g g g g g g"\
    "f f f f f f f"
    row-gap 20px
    column-gap 10px
    align-items center
    justify-content center
    padding 30px 50px

    @media (max-width 700px)
      margin 15px
      grid-template-rows auto auto auto auto auto
      grid-template-columns 15% auto 15%
      grid-template-areas "b b b"\
      "a c d"\
      "e e e"\
      "g g g"\
      "f f f"

    .grid-trip-back-button
      grid-area a

    .grid-trip-title
      grid-area b

    .grid-trip-authors-gallery
      grid-area c

    .grid-trip-share-icon
      grid-area d

    .grid-trip-date
      grid-area e

    .grid-trip-gallery-photos
      grid-area f

    .grid-trip-description
      grid-area g

    .trip-authors-gallery
      display flex
      flex-direction row
      overflow-x scroll
      scrollbar-width none
      width 100%
      height 100%
      align-items center
      column-gap 10px

      .please-no-authors
        font-size 27px
        color myBlack

      .authors-block
        background myBlack
        align-content center
        justify-content center
        border-radius 15px
        height 100%
        width fit-content
        display grid
        grid-template-columns auto auto
        padding 0 10px
        column-gap 10px

        .author-avatar
          width 50px
          height 50px
          background myBlack
          border-radius 50%

        .author-username
          font-size 27px
          color myWhite
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          text-align center
          align-self center

    .trip-share-icon
      width 100%
      padding 5px
      background-color myBlack
      border-radius 10px
      cursor pointer
      transition all 0.3s ease

      @media (max-width 700px)
        width 40px

      &:hover
        background myPink

    .trip-back-button
      cursor pointer
      width 40px
      border-radius 10px
      transition transform 0.3s ease

      &:hover
        transform scale(1.05)

    .trip-title
      background myBlack
      color myWhite
      font-size 27px
      width 90%
      justify-self center
      height 100%
      text-align center
      align-content center
      border-radius 10px
      white-space nowrap
      overflow hidden
      text-overflow ellipsis

      @media (max-width 700px)
        width 100%
        font-size 22px
        padding 10px 20px

    .trip-date
      background myBlack
      color myWhite
      font-size 20px
      height 100%
      width 100%
      padding 20px
      text-align center
      justify-self center
      border-radius 10px

    .trip-description
      color myBlack
      font-size 20px
      border-radius 10px
      padding 20px
      width 100%
      min-height 70px
      align-self normal
      height fit-content
      border 2px solid myLightGrey

    .trip-gallery-photos
      display flex
      flex-direction row
      column-gap 20px
      justify-content center
      padding-bottom 30px

    .trip-photos
      display flex
      flex-wrap wrap
      flex-direction row
      column-gap 20px
      row-gap 20px

      @media (max-width 700px)
        column-gap 10px
        row-gap 10px


      .please-block
        align-items center
        display flex
        flex-direction column

        .please-img
          height 200px
          width 200px

        .please-no-photo
          font-size 24px
          font-weight bold
          color myBlack
          margin auto
          text-align center
          width fit-content

    .add-photo-button
      color myWhite
      background myBlack
      align-content center
      text-align center
      border-radius 20px
      min-width 150px
      min-height 150px
      cursor pointer
      transition background 0.3s ease

      &:hover
        background myPinkShadow

      @media (max-width 700px)
        min-width 100px

    .delete-added-photo-block
      position relative
      min-width 150px
      width 150px
      min-height 150px
      height 150px

      .photo-delete-button
        color myWhite
        display block
        position absolute
        border-radius 0 0 20px 20px
        bottom 0
        width 100%
        background myRed
        text-align center
        align-content center
        object-fit cover
        height 40px
        opacity 0
        cursor pointer
        transition opacity 0.3s ease

        &:hover
          opacity 1

      .added-photo
        position absolute
        color myWhite
        background myPinkShadow
        align-content center
        text-align center
        border-radius 20px
        width 100%
        height 100%
        object-fit cover