.place-page
  mixinSideMenu()

  .place-block
    display grid
    grid-template-rows 100px 100px 250px 300px 450px
    grid-template-columns 10% auto 30%
    margin 0 50px
    gap 30px
    grid-template-areas "a b c"\
    "k k c"\
    "d d c"\
    "e e e"\
    "f f f"

    @media (max-width 700px)
      display flex
      flex-direction column

    .grid-back-button
      grid-area a

      @media (max-width 700px)
        display none

    .grid-place-name
      grid-area b

    .grid-place-image
      grid-area c

    .grid-place-info
      grid-area d

    .grid-map-container
      grid-area e

    .grid-reviews
      grid-area f

    .grid-categories
      grid-area k

  .place-name
    background-color myBlack
    border-radius 30px
    font-weight bold
    color myWhite
    padding 20px
    font-size 35px
    display flex
    justify-content center
    align-items center
    text-align center
    flex-grow 1
    position relative

    &::before
      content ''
      border-radius 30px
      position absolute
      inset 16px 16px -16px -16px
      background myShadow
      overflow auto
      z-index -1

  .back-button-block
    mixinBlock(myBlack)
    margin 0
    width 100%
    height 100%

    .back-button
      mixinBackButton()
      width 100%
      height 100%

  .place-image
    mixinBlock(myBlack)
    margin 0
    padding 0
    display block
    width 100%
    border-radius 30px
    aspect-ratio 1 / 1

    img
      border-radius 30px
      object-fit cover
      height 100%
      width 100%

  hr.solid
    border-top 2px solid #23232320

  .map-container
    mixinBlock(myBlack)
    margin auto
    padding 0
    width 100%
    height 100%
    display block
    min-width 100%
    aspect-ratio 1 / 1
    border-radius 30px

  .map-class
    width 100%
    height 100%
    border-radius 30px

  @media (max-width 700px)
    .place-block
      flex-direction column

  .place-info
    background-color myBlack
    border-radius 30px
    padding 30px
    font-size 20px
    color myWhite
    position relative

    &::before
      content ''
      border-radius 30px
      position absolute
      inset 16px 16px -16px -16px
      background myShadow
      overflow auto
      z-index -1

    .description
      overflow-y scroll
      scrollbar-width none

  .reviews
    display grid
    grid-template-columns auto auto
    grid-template-rows auto
    column-gap 40px

    @media (max-width 700px)
      display flex
      flex-direction column
      overflow-x visible
      row-gap 20px

    .review-form
      mixinBlock(myWhite)
      height 90%
      width 500px
      display grid
      row-gap 20px
      margin 0
      grid-template-rows 25% auto 15%
      grid-template-columns auto auto
      grid-template-areas "a b"\
      "c c"\
      "d d"

      @media (max-width 700px)
        height 500px
        grid-template-rows 10% 10% auto 10%
        grid-template-columns auto auto
        row-gap 15px
        grid-template-areas "a a"\
        "b b"\
        "c c"\
        "d d"

      .grid-review-form-title
        grid-area a

      .review-form-title
        font-size 30px
        font-weight bold
        color myBlack
        align-self center
        text-align center

        @media (max-width 700px)
          font-size 25px

      .grid-rating
        grid-area b

      .rating
        padding 20px
        background myBlack
        border-radius 20px
        color myWhite
        font-size 30px
        text-align center
        align-content center

        @media (max-width 700px)
          font-size 25px
          padding 0
          width 60%
          justify-self center

        .rating-input
          background myBlack
          width 30px
          border none
          color myPink
          font-size 30px
          text-align center
          text-decoration underline
          text-underline-offset 5px
          -moz-appearance textfield

          &::-webkit-inner-spin-button
            display none

          @media (max-width 700px)
            font-size 25px


      .grid-review-text-area
        grid-area c

      .review-text-area
        border-radius 20px
        padding 15px
        font-size 20px
        border 2px solid myLightGrey
        color myBlack
        background-color myWhite

      .grid-review-form-button
        grid-area d

      .review-form-button
        background-color myBlack
        color myWhite
        justify-self center
        align-content center
        text-align center
        font-size 20px
        width 70%
        height 100%
        border-radius 20px

    .reviews-gallery
      display flex
      flex-direction row
      overflow-x scroll
      scrollbar-width none
      width 100%
      padding-left 20px
      column-gap 20px

      @media (max-width 700px)
        display flex
        flex-direction column
        overflow-x visible
        row-gap 20px
        padding 0


    .review-item
      mixinBlock(myWhite)
      margin 0
      padding 25px
      height fit-content
      min-width 300px
      max-height 400px
      display grid
      grid-template-rows auto auto
      grid-template-columns 20% auto 20%
      grid-template-areas "a b c"\
      "d d d"
      column-gap 10px
      row-gap 10px

      .grid-reviewers-avatar
        grid-area a

      .reviewers-avatar
        width 50px
        height 50px
        background myBlack
        border-radius 50%

      .grid-reviewers-login
        grid-area b

      .reviewers-login
        font-size 20px
        color myBlack
        font-weight bold
        align-self center

      .grid-review-rating
        grid-area c

      .review-rating
        font-size 20px
        color myBlack
        font-weight bold
        align-self center
        text-align center

      .grid-review-text
        grid-area d

      .review-text
        height 100%
        max-height 300px
        font-size 20px
        color myBlack
        align-self center
        overflow-y scroll
