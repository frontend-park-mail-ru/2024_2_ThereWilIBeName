.place-page
  mixinSideMenu()

  .place-block
    display grid
    grid-template-rows 100px 250px 300px 500px
    grid-template-columns 10% auto 30%
    margin 0 50px
    gap 30px
    grid-template-areas "a b c"\
    "d d c"\
    "e e e"\
    "f f f"

    .grid-back-button
      grid-area a

    .grid-place-name
      grid-area b

    .grid-place-image
      grid-area c

    .grid-place-info
      grid-area d

    .grid-map-container
      grid-area e

    .grid-reviews
      grid-area f

  .place-name
    background-color myBlack
    border-radius 30px
    font-weight bold
    color myWhite
    padding 20px
    font-size 35px
    display flex
    justify-content center
    align-items center
    flex-grow 1
    position relative

    &::before
      content ''
      border-radius 30px
      position absolute
      inset 16px 16px -16px -16px
      background myShadow
      overflow auto
      z-index -1

  .back-button-block
    mixinBlock(myBlack)
    margin 0
    width 100%
    height 100%

    .back-button
      mixinBackButton()
      width 100%
      height 100%

  .place-image
    mixinBlock(myBlack)
    margin 0
    padding 0
    display block
    width 100%
    border-radius 30px
    aspect-ratio 1 / 1

  .place-image img
    object-fit cover
    height 100%
    width 100%

  hr.solid
    border-top 2px solid #23232320

  .map-container
    mixinBlock(myBlack)
    margin auto
    padding 0
    width 100%
    height 100%
    display block
    min-width 100%
    aspect-ratio 1 / 1
    border-radius 30px

  .map-class
    width 100%
    height 100%
    border-radius 30px

  @media (max-width 700px)
    .place-block
      flex-direction column

  .place-info
    background-color myBlack
    border-radius 30px
    padding 30px
    font-size 20px
    color myWhite
    position relative

    &::before
      content ''
      border-radius 30px
      position absolute
      inset 16px 16px -16px -16px
      background myShadow
      overflow auto
      z-index -1

    .description
      overflow-y scroll
      scrollbar-width none

  .reviews
    display flex
    flex-direction column
    padding-left 20px
    overflow-x scroll
    scrollbar-width none

    .review-block
      mixinReviewBlock()

    .user-review-block
      mixinReviewBlock()
      margin-bottom 0

    .review-info
      display flex
      gap 10px
      align-items center

    .rating
      padding 12px 45px
      margin-left auto
      color myWhite
      font-size 17px
      position relative
      &::before
        content ""
        position absolute
        background-color myBlack
        border-radius 30px
        inset 0
        z-index -1
      &::after
        position absolute
        border-radius 30px
        background linearGradient()
        inset 0 auto 0 0
        margin 5px
        width calc(90% * (max(var(--progress, 2), 1.5) / 5))
        content ""
        z-index -1

    .text-average
      font-size 20px
      font-weight 600

    .user-image img
      max-width 45px
      max-height 45px
      border-radius 50%
      display block
      aspect-ratio 1 / 1

    .review-text
      font-size 17px
      padding-bottom 10px

    .leave-review
      mixinReviewBlock()
      display none

    .leave-review.visible
      display flex

    .review-field
      all unset
      padding 12px
      white-space pre-wrap
      overflow-wrap break-word
      text-align start
      width 100%
      overflow-y hidden
      resize none
      border-radius 30px
      border 3px solid myBlack
      box-sizing border-box

    .leave-review-header
      display flex
      justify-content center
      align-items center
      padding 10px


    .leave-review-header-text
      font-size 20px

    .stars
      margin-left auto
      font-size 27px
      display flex
      cursor pointer
      gap 10px
      flex-direction row-reverse

      .star
        color myBlack
        border 2px myBlack

        &:hover
        &:hover ~ .star
        &.selected ~ .star
        &.selected
          background linearGradient() 50% 50% / 100vw 100vh
          color transparent
          background-clip text

    .review-button
      mixinFormButton()

    .delete-review
      margin 10px auto
      cursor pointer
      width 35px
      height 35px
      transition transform 0.3s ease

      &:hover
        transform scale(1.05)

    .user-review
      display none

    .user-review.visible
      display flex
      flex-direction column
      margin 0

    ul
      list-style-type none
      padding 0
      margin 0

      .menu-button
        mixinButton(myBlack, myWhite)
        margin 0
        text-align left
        transition transform  0.3s ease

        &:hover
          transform scale(1.05)
