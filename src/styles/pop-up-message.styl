.pop-up-message
  background myWhite
  color myGrey
  border-radius 10px
  display block
  opacity 1
  position fixed
  font-size 27px
  padding 40px
  text-align center
  align-content center
  z-index 999
  top 50px
  left 50%
  box-shadow 0px 10px 20px 5px myShadow
  transform translate(-50%, 0)
  transition opacity 0.3s ease

  &.hidden
    display none

  &.hidden-animation
    opacity 0