simpleButton(button-color, text-color)
  padding 7px 25px
  margin-right 15px
  background-color button-color
  color text-color
  border none
  border-radius 15px
  cursor pointer
  font-size 17px
  font-weight: bold;

simpleTitleGradient()
  margin-top 0
  margin-bottom 0
  font-weight bold
  text-align center
  background-clip text
  color transparent
  font-size 30px
  background linearGradient() 50% 50% / 100vw 100vh
  background-clip text

simpleFormBlock()
  background-color my-black
  overflow hidden
  padding 20px
  border-radius 30px
  width 400px
  height fit-content
  margin 40px auto

simpleFormText()
  padding-left 15px
  color my-white
  font-size 17px
  display block
  margin-bottom 10px

simpleFormButton()
  display block
  margin 20px auto
  background-color my-grey
  color my-white
  padding 10px 35px
  border none
  border-radius 30px
  cursor pointer
  font-size 20px