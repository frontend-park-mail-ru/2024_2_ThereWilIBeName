.admin-page
  mixinSideMenu()

  .admin-main
    width 100%
    height 100%
    display grid
    grid-template-rows auto
    grid-template-columns repeat(4, auto)
    column-gap 10px
    padding 20px

    .table-question
      padding 20px
      border-radius 20px
      background myWhite
      height 100%
      display grid
      row-gap 5px
      grid-template-columns auto auto
      grid-template-rows auto 15% 15% 15% 15% 15%
      grid-template-areas "a b"\
      "c d"\
      "e f"\
      "g h"\
      "i j"\
      "k l"

      .title-grid
        grid-area a

      .avg-grid
        grid-area b
        text-align center

      .one-star-grid
        grid-area c

      .one-star-count-grid
        grid-area d
        text-align center

      .two-star-grid
        grid-area e

      .two-star-count-grid
        grid-area f
        text-align center

      .three-star-grid
        grid-area g

      .three-star-count-grid
        grid-area h
        text-align center

      .four-star-grid
        grid-area i

      .four-star-count-grid
        grid-area j
        text-align center

      .five-star-grid
        grid-area k

      .five-star-count-grid
        grid-area l
        text-align center
