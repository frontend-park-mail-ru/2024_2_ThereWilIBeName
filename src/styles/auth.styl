.auth-page
    .auth-block
        mixinFormBlock()

    .auth-signup-button
    .auth-title
        mixinTitleGradient()

    .auth-title
        font-size 35px

    .auth-text
    .back-button
        mixinFormText()

    .back-button
        padding 5px
        width 35px
        cursor pointer
        font-weight bold
        transition transform 0.3s ease

    .auth-button
        mixinFormButton()
        margin-top 30px

    .auth-signup-button
        mixinFormButton()
        color myWhite
        border 2px solid myGrey
        width fit-content
        margin-bottom 0
        transition all 0.3s ease

        &:hover
            color myLightGrey

    .remember-me-container
        display flex
        justify-content flex-start
        align-items center
        color myWhite
        padding 0 20px

    .remember-me
        margin 8px 5px
        font-size 17px

    .custom-check-icon
        all unset
        position relative
        width 18px
        height 18px
        border 0
        margin-right 8px
        background-color myGrey
        cursor pointer

        &::after
            position absolute
            left 2px
            top -3px
            opacity 0
            transition opacity 0.2s ease
            content "âœ”"

        &:checked::after
            opacity 1

    .border
        all unset
        display block
        width 90%
        height 30px
        padding 10px
        border-radius 15px
        margin 10px auto
        background linearGradient() 50% 50% / 100vw 100vh

        &:focus
            background-position 0

    .auth-line
        border-top 2px solid myGrey
