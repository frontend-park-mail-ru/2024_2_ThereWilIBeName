.auth-page
    .auth-block
        mixinFormBlock()

    .auth-signup-button
    .auth-title
        mixinTitleGradient()

    .auth-text
    .back-button
        mixinFormText()

    .back-button
        width fit-content
        cursor pointer
        font-weight bold
        font-size 20px

        &:hover
            color myRed

    .auth-button
        mixinFormButton()

    .auth-signup-button
        font-size 18px
        cursor pointer
        margin-top 15px
        border-top 2px solid myGrey
        padding 15px
        display block
        transition letter-spacing 0.2s ease, background-position 0.3s ease

        &:hover
            letter-spacing 2px
            background-position 0 0

    .remember-me-container
        display flex
        justify-content flex-start
        align-items center
        color myWhite
        padding 0 20px

    .remember-me
        margin 8px 5px
        font-size 17px

    .custom-check-icon
        all unset
        position relative
        width 18px
        height 18px
        border 0
        margin-right 8px
        background-color myGrey
        cursor pointer

        &::after
            position absolute
            left 2px
            top -3px
            opacity 0
            transition opacity 0.2s ease
            content "âœ”"

        &:checked::after
            opacity 1
