.home-page
    mixinSideMenu()

    hr
        border 1px solid myBlack
        width 20%

    .headline
        border 10px
        margin-bottom 10px
        text-align center
        color myBlack
        font-size 40px

        @media (max-width 700px)
            font-size 30px

    .gallery
        padding 50px
        columns 3 300px

    .gallery-item
        border-radius 20px
        margin auto
        width 300px
        height 100px
        transition transform 0.3s ease
        cursor pointer
        position relative

        &::before
            content ''
            border-radius 30px
            position absolute
            inset 16px 16px -16px -16px
            background myShadow
            overflow auto
            z-index -1

        &:hover
            transform scale(1.02)

        img
            object-fit cover
            width 100%
            height 100%
            border-radius 20px

        p
            position absolute
            text-align center
            padding 10px
            margin 0
            border-radius 0 0 20px 20px
            background myShadow
            color myWhite
            bottom 0
            width 100%

    .profile-button
        mixinButton(myBlack, myWhite)
