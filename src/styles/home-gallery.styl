.home-page
    mixinSideMenu()

    .headline
        padding 10px
        border 10px
        text-align center
        font-weight bold
        color myWhite
        font-size 40px

        @media (max-width 700px)
            font-size 30px

    .gallery
        display flex
        flex-wrap wrap
        justify-content space-evenly
        gap 50px 30px
        padding 0px 150px

    .gallery-item
        margin 0
        padding 0
        border-radius 30px
        position relative
        overflow hidden
        min-width 200px
        max-width 300px
        height 200px
        width 100%
        filter drop-shadow(-16px 16px 0px myShadow)
        transition transform 0.3s ease
        cursor pointer

        &:hover
            transform scale(1.05)

        img
            object-fit cover
            width 100%
            height 100%
            border-radius 30px 30px 0 0

        p
            position absolute
            text-align center
            padding 10px
            margin 0
            background myShadow
            color myWhite
            bottom 0
            width 100%

    .profile-button
        mixinButton(myBlack, myWhite)
