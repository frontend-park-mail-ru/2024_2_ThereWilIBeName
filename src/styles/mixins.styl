mixinButton(buttonColor, textColor)
  padding 7px 25px
  margin 15px 15px
  background-color buttonColor
  color textColor
  border none
  border-radius 15px
  cursor pointer
  font-size 17px
  font-weight bold

mixinTitleGradient()
  margin-top 0
  margin-bottom 0
  font-weight bold
  text-align center
  background-clip text
  color transparent
  font-size 30px
  background linearGradient() 50% 50% / 100vw 100vh
  background-clip text

mixinFormBlock()
  background-color myBlack
  padding 20px
  border-radius 30px
  width 400px
  height fit-content
  margin 40px auto

mixinFormText()
  padding-left 15px
  color myWhite
  font-size 17px
  display block
  margin-bottom 10px

mixinFormButton()
  display block
  margin 20px auto
  background-color myGrey
  color myWhite
  padding 10px 35px
  border none
  border-radius 30px
  cursor pointer
  font-size 20px

mixinBlock(blockColor)
  background-color blockColor
  border-radius 20px
  max-width 70%
  height fit-content
  display grid
  margin 20px auto
  padding 25px 25px
  column-gap 25px
  filter drop-shadow(-16px 16px 0px myShadow)

mixinInformationText(textColor)
  margin 15px 25px
  color textColor
  font-size 20px

mixinRow()
  display grid
  align-items center
  margin 0 20px

mixinGalleryItem(galleryItemHeight, galleryItemWidth, backgroundColor)
  margin 0
  padding 15px
  border-radius 20px
  background backgroundColor
  height galleryItemHeight
  width galleryItemWidth
  display grid
  row-gap 15px
  overflow hidden
  border 2px solid myShadow
  filter drop-shadow(-16px 16px 0px myShadow)
