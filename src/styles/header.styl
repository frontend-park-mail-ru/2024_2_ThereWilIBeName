.logo-image
    align-self flex-start
    height 100px
    cursor pointer
    margin 20px 20px
    transition transform 0.3s ease

    &:hover
        transform scale(1.05)

.header
    display grid
    grid-template-columns 20% 1fr 15% 10%
    grid-template-rows auto
    column-gap 10px
    align-items center
    background myBlack
    margin-top 15px
    margin-bottom 20px
    padding 5px 0
    padding-right 15px

    .logo-image-black
        height 100%
        width 100%
        max-width 200px
        cursor pointer
        margin 0 20px
        transition transform 0.3s ease

        &:hover
            transform scale(1.05)

    .search
        position relative
        padding 0 40px

    .search-button
        position absolute
        height 42px
        aspect-ratio 1 / 1
        top 2px
        right 105px
        cursor pointer
        transition all 0.3s ease

        &:hover
            transform scale(0.95)

    .search-input
        padding 15px
        margin auto
        width 90%
        border 1px solid myWhite
        background myBlack
        border-radius 10px
        outline none
        color myWhite

        &::placeholder
            font-family 'Hero'
            font-size 20px

        @media (max-width 700px)
            height 60px

    .header-button
        mixinButton(myBlack, myWhite)
        border 1px solid myWhite
        transition transform 0.3s ease

        &:hover
            transform scale(1.1)

        &.hidden
            display none

    .user-button
        height 60px
        width 60px
        border-radius 10px
        background linearGradient()
        display none
        cursor pointer
        margin auto
        position relative

        &.show
            display block

        .avatar
            position absolute
            border-radius 10px
            inset 0

            &:hover
                transform scale(0.95)



@media (max-width 700px)
    display grid
    grid-auto-columns auto auto auto