.logo-image
    align-self flex-start
    height 100px
    cursor pointer
    margin 20px 20px
    transition transform 0.3s ease

    &:hover
        transform scale(1.05)


    @media (max-width 700px)
        margin 0px

.header
    display grid
    grid-template-columns 20% 1fr 15% 10%
    grid-template-rows auto
    column-gap 10px
    align-items center
    background myBlack
    margin-top 15px
    margin-bottom 20px
    padding 5px 0
    padding-right 15px

    @media (max-width 700px)
        display grid
        grid-template-rows auto auto
        grid-template-columns 35% auto auto
        grid-template-areas "a c d"\
        "b b b"
        padding 5px
        column-gap 5px
        justify-items center

        .logo-grid
            grid-area a
            height 100%
            justify-self start
            padding-left 10px

        .search-grid
            grid-area b
            width 100%
            margin 10px

        .trips-grid
            grid-area c

        .user-grid
            grid-area d
            height 100%

    .logo-image-black
        height 100%
        width 100%
        max-width 200px
        cursor pointer
        margin 0 20px
        transition transform 0.3s ease

        &:hover
            transform scale(1.05)

        @media (max-width 700px)
            margin 0px


    .trips-button
        mixinButton(myBlack, myWhite)
        border 1px solid myWhite

        &.hidden
            display none

        @media (max-width 700px)
            margin 0px

    .header-button
        mixinButton(myBlack, myWhite)
        border 1px solid myWhite
        transition transform 0.3s ease

        &:hover
            transform scale(1.1)

        &.hidden
            display none

        @media (max-width 700px)
            margin 0px
            height fit-content


    .user-button
        height 70px
        width 70px
        border-radius 10px
        background myGrey
        display none
        cursor pointer
        margin auto
        position relative

        &.show
            display block

        .avatar
            position absolute
            object-fit cover
            border-radius 10px
            inset 0
            height 100%
            width 100%
            transition transform 0.3s ease

            &:hover
                transform scale(0.92)
