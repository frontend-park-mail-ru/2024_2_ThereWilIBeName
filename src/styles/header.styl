.logo-image
    align-self normal
    height 100px
    cursor pointer
    margin 20px 20px
    transition transform 0.3s ease

    &:hover
        transform scale(1.05)

.header
    display grid
    grid-template-columns 20% 1fr 15% 15%
    grid-template-rows auto
    column-gap 10px
    align-items center
    background myBlack
    margin-top 20px
    margin-bottom 20px
    padding-right 15px

    .logo-image-black
        height 100%
        width 100%
        max-width 200px
        cursor pointer
        margin 10px 20px
        transition transform 0.3s ease

        &:hover
            transform scale(1.05)

    .search
        padding 15px
        margin auto
        width 60%
        border 1px solid myWhite
        background myBlack
        border-radius 10px
        outline none
        text-align center
        color myWhite

        &::placeholder
            text-align center
            font-family 'Hero'
            font-size 20px

        @media (max-width 700px)
            height 60px

    .header-button
        mixinButton(myBlack, myWhite)
        border 1px solid myWhite
        transition transform 0.3s ease

        &:hover
            transform scale(1.1)

        &.hidden
            display none

    .user-button
        mixinButton(myBlack, myWhite)
        text-align center
        border 1px solid myWhite
        transition all 0.3s ease
        display none

        &:hover
            color myRed

        &.show
            display block

    @media (max-width 700px)
        padding 0
        padding-top 20px

@media (max-width 700px)
    display grid
    grid-auto-columns auto auto auto