.home-page
    .headline
        padding 10px
        border 10px
        text-align center
        font-weight bold
        color my-white
        font-size 40px

    .gallery
        display flex
        flex-wrap wrap
        justify-content space-evenly
        gap 50px 30px
        padding 0px 150px

    .gallery-item
        margin 0
        padding 0
        border-radius 30px
        position relative
        overflow hidden
        min-width 200px
        max-width 300px
        height 200px
        width 100%
        filter drop-shadow(-16px 16px 0px my-shadow)

    .gallery-item img
        object-fit cover
        width 100%
        height 100%
        border-top-left-radius 30px
        border-top-right-radius 30px

    .gallery-item p
        position absolute
        text-align center
        padding 10px
        margin 0
        background my-shadow
        color my-white
        bottom 0
        width 100%

    .profile-button
        simpleButton(my-black, my-white)
